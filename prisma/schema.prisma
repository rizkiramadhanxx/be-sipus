// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  EMPLOYEE
}

model User {
  id_user  Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  id_book  Book[]
  role     Role
}

model Book {
  id_book     Int       @id @default(autoincrement())
  title       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  id_author   Int
  Author      Author?   @relation(fields: [id_author], references: [id_author])
  id_language Int
  Language    Language? @relation(fields: [id_language], references: [id_language])
  id_user     Int
  User        User      @relation(fields: [id_user], references: [id_user])

  Category Category[]
}

model Category {
  id_category Int    @id @default(autoincrement())
  name        String @unique
  Book        Book[]
}

model Author {
  id_author Int    @id @default(autoincrement())
  fullName  String
  Book      Book[]
}

model Language {
  id_language Int    @id @default(autoincrement())
  name        String @unique
  Book        Book[]
}
